<%= form_for @notice, html: { class: "form-horizontal" } do |f|  %>
  <div class="form-group row">
    <label class="col-2 col-form-label">
      <%= Notice.human_attribute_name("title") %>
    </label>
    <div class="col-10">
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2 col-form-label">
      <%= Notice.human_attribute_name("content") %>
    </label>
    <div class="col-10">
      <%= f.text_area :content, id: "ckeditor", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-10 text-right">
      <button type="submit" class="btn btn-primary"><%= t("btn.submit") %></button>
      <%= link_to t("btn.cancel"), notices_path, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
<% content_for :javascript do %>
<script type="text/javascript">
  CKEDITOR.replace("ckeditor")
</script>
<% end %>
